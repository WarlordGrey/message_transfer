<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainUI"
    android:background="#ff5b5b5b"
    android:gravity="top|bottom"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:textSize="@dimen/edit_text_text_size"
        android:id="@+id/editMessage"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:background="@drawable/rounded_plain_text"
        android:autoText="false"
        android:gravity="top|left"
        android:padding="@dimen/edit_text_inner_padding" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/btn_send_txt"
        android:textSize="@dimen/button_text_size"
        android:id="@+id/btnSend"
        android:layout_below="@+id/textView"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_sign_up_txt"
        android:textSize="@dimen/button_text_size"
        android:id="@+id/btnSignUp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button"
        android:layout_weight="0.5" />

</LinearLayout>
